<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
	说明: SysplDicBigTypeMapper映射文件
	
	@author rutine
	@time Sep 23, 2014 9:36:48 AM
	@version 2.0.0
 -->
<mapper namespace="com.mycuckoo.persistence.platform.SysplDicBigTypeMapper">
	<resultMap id="sysplDicBigType" type="com.mycuckoo.domain.platform.SysplDicBigType">
		<id property="bigTypeId" column="big_type_id" />
		<result property="bigTypeName" column="big_type_name" />
		<result property="bigTypeCode" column="big_type_code" />
		<result property="memo" column="memo" />
		<result property="status" column="status" />
		<result property="creator" column="creator" />
		<result property="createDate" column="create_date" />
	</resultMap>
	
	<sql id="colums">
		big_type_id, big_type_name, big_type_code, memo, status, creator, create_date
	</sql>

	<!-- 插入字典大类： 1.由数据库生成id并赋值到SysplDicBigType对象 -->
	<insert id="save" parameterType="com.mycuckoo.domain.platform.SysplDicBigType">
		<selectKey keyProperty="bigTypeId" resultType="long" order="BEFORE">
			<include refid="table.SYSPL_DIC_BIG_TYPE_SEQ"/>
		</selectKey>
		insert into <include refid="table.syspl_dic_big_type"/>
		(
			big_type_id, big_type_name, big_type_code, memo, status, creator, create_date
		)
		values (
			#{bigTypeId}, #{bigTypeName}, #{bigTypeCode}, #{memo}, #{status}, #{creator}, #{createDate}
		)
	</insert>
	
	<!-- 更新字典大类： 1.输入对象参数  -->
	<update id="update" parameterType="com.mycuckoo.domain.platform.SysplDicBigType">
		update 
			<include refid="table.syspl_dic_big_type"/>
		set
			big_type_name				= #{bigTypeName},
			big_type_code				= #{bigTypeCode}, 
			memo								= #{memo}, 
			status							= #{status}, 
			creator							= #{creator}, 
			create_date					= #{createDate}
		where 
			big_type_id = #{bigTypeId}
	</update>
	
	<!-- 删除字典大类 -->
	<delete id="delete" parameterType="long">
		delete from <include refid="table.syspl_dic_big_type"/> where big_type_id = #{id}
	</delete>
	
	<!-- 删除一组字典大类 -->
	<delete id="deleteSome" parameterType="list">
		delete from 
			<include refid="table.syspl_dic_big_type"/> 
		where 
			big_type_id in
		<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<!-- 删除所有字典大类 -->
	<delete id="deleteAll">
		delete from <include refid="table.syspl_dic_big_type"/>
	</delete>
	
	<!-- 判断字典大类是否存在 -->
	<select id="exists" parameterType="long" resultType="boolean">
		select
			count(*) > 0 
		from 
			<include refid="table.syspl_dic_big_type"/>
		where 
			big_type_id = #{id}
	</select>
	
	<!-- 统计字典大类记录总数 -->
	<select id="count" resultType="long">
		select
			count(*) 
		from 
			<include refid="table.syspl_dic_big_type"/>
	</select>
	
	<!--
		获取字典大类: 输出直接映射到对象, big_type_id 列要 as bigTypeId 以方便映射创建 SysplDicBigType 对象并赋值
	-->
	<select id="get" parameterType="long" resultType="com.mycuckoo.domain.platform.SysplDicBigType">
		select 
			big_type_id				as bigTypeId, 
			big_type_name			as bigTypeName,
			big_type_code			as bigTypeCode, 
			memo							as memo, 
			status						as status, 
			creator						as creator,
			create_date				as createDate
		from 
			<include refid="table.syspl_dic_big_type"/>
		where 
			big_type_id = #{id}
	</select>

	<!-- 返回所有字典大类, 映射到 sysplDicBigType-->
	<select id="findAll" resultMap="sysplDicBigType">
		select 
			*
		from 
			<include refid="table.syspl_dic_big_type"/>
	</select>
	
	<!-- 根据字典大类编码统计字典大类数量 -->
	<select id="countDicBigTypesByBigTypeCode" parameterType="string" resultType="int">
		select 
			count(*)
		from 
			<include refid="table.syspl_dic_big_type"/>
		where
			big_type_code = #{bigTypeCode}
	</select>
	
	<!-- 根据字典大类名称及代码分页查询字典大类 -->
	<select id="findDicBigTypesByCon" parameterType="map" resultMap="sysplDicBigType">
		select 
			*
		from 
			<include refid="table.syspl_dic_big_type"/>
		<where>
			<if test="bigTypeName != null">
				big_type_name like #{bigTypeName}
			</if>
			<if test="bigTypeCode != null">
				and big_type_code like #{bigTypeCode}
			</if>
		</where>
		order by 
			big_type_id desc
		<if test="start > -1 and limit > 0">
			limit #{limit} offset #{start}
		</if>
	</select>
	
	<!-- 根据字典大类名称及代码统计字典大类记录数 -->
	<select id="countDicBigTypesByCon" parameterType="map" resultType="int">
		select 
			count(*)
		from 
			<include refid="table.syspl_dic_big_type"/>
		<where>
			<if test="bigTypeName != null">
				big_type_name like #{bigTypeName}
			</if>
			<if test="bigTypeCode != null">
				and big_type_code like #{bigTypeCode}
			</if>
		</where>
	</select>
	
	<!-- 根据字典大类ID修改字典大类状态 -->
	<update id="updateDicBigTypeStatus">
		update
			<include refid="table.syspl_dic_big_type"/>
		set
			status = #{status}
		where
			big_type_id = #{bigTypeId}
	</update>
	
</mapper> 
