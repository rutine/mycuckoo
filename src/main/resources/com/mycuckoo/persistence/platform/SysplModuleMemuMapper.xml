<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
	说明: SysplModuleMemuMapper映射文件
	
	@author rutine
	@time Sep 23, 2014 9:48:44 AM
	@version 2.0.0
 -->
<mapper namespace="com.mycuckoo.persistence.platform.SysplModuleMemuMapper">
	<resultMap id="sysplModuleMemu" type="com.mycuckoo.domain.platform.SysplModuleMemu">
		<id property="moduleId" column="module_id" />
		<result property="sysplModuleMemu.moduleId" column="mod_parent_id" />
		<result property="modName" column="mod_name" />
		<result property="modEnId" column="mod_en_id" />
		<result property="modImgCls" column="mod_img_cls" />
		<result property="modLevel" column="mod_level" />
		<result property="modOrder" column="mod_order" />
		<result property="belongToSys" column="belong_to_sys" />
		<result property="modPageType" column="mod_page_type" />
		<result property="status" column="status" />
		<result property="memo" column="memo" />
		<result property="creator" column="creator" />
		<result property="createDate" column="create_date" />
	</resultMap>
	
	<sql id="colums">
		module_id, mod_parent_id, mod_name, mod_en_id, mod_img_cls, mod_level, 
		mod_order, belong_to_sys, mod_page_type, memo, status, creator, create_date
	</sql>

	<!-- 插入模块菜单： 1.由数据库生成id并赋值到 SysplModuleMemu对象 2.嵌套属性输入#{sysplModuleMemu.moduleId} -->
	<insert id="save" parameterType="com.mycuckoo.domain.platform.SysplModuleMemu">
		<selectKey keyProperty="moduleId" resultType="long" order="BEFORE">
			<include refid="table.SYSPL_MODULE_MEMU_SEQ"/>
		</selectKey>
		insert into <include refid="table.syspl_module_memu"/>
		(
			module_id, mod_parent_id, mod_name, mod_en_id, mod_img_cls, mod_level, 
			mod_order, belong_to_sys, mod_page_type, memo, status, creator, create_date
		)
		values (
			#{moduleId}, #{sysplModuleMemu.moduleId}, #{modName}, #{modEnId}, #{modImgCls}, #{modLevel}, 
			#{modOrder}, #{belongToSys}, #{modPageType}, #{memo}, #{status}, #{creator}, #{createDate}
		)
	</insert>
	
	<!-- 更新模块菜单： 1.输入对象参数 2.嵌套属性输入#{sysplModuleMemu.moduleId} -->
	<update id="update" parameterType="com.mycuckoo.domain.platform.SysplModuleMemu">
		update 
			<include refid="table.syspl_module_memu"/>
		set
			mod_parent_id				= #{sysplModuleMemu.moduleId},
			mod_name						= #{modName}, 
			mod_en_id						= #{modEnId}, 
			mod_img_cls					= #{modImgCls}, 
			mod_level						= #{modLevel}, 
			mod_order						= #{modOrder}, 
			belong_to_sys				= #{belongToSys}, 
			mod_page_type				= #{modPageType}, 
			memo								= #{memo}, 
			status							= #{status}, 
			creator							= #{creator}, 
			create_date					= #{createDate}
		where 
			module_id = #{moduleId}
	</update>
	
	<!-- 删除模块菜单 -->
	<delete id="delete" parameterType="long">
		delete from <include refid="table.syspl_module_memu"/> where module_id = #{id}
	</delete>
	
	<!-- 删除一组模块菜单 -->
	<delete id="deleteSome" parameterType="list">
		delete from 
			<include refid="table.syspl_module_memu"/> 
		where 
			module_id in
			<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
				#{item}
			</foreach>
	</delete>
	
	<!-- 删除所有模块菜单 -->
	<delete id="deleteAll">
		delete from <include refid="table.syspl_module_memu"/>
	</delete>
	
	<!-- 判断模块菜单是否存在 -->
	<select id="exists" parameterType="long" resultType="boolean">
		select
			count(*) > 0 
		from 
			<include refid="table.syspl_module_memu"/>
		where 
			module_id = #{id}
	</select>
	
	<!-- 统计模块菜单记录总数 -->
	<select id="count" resultType="long">
		select
			count(*) 
		from 
			<include refid="table.syspl_module_memu"/>
	</select>
	
	<!--
		获取模块菜单: 输出直接映射到对象, module_id 列要 as moduleId 以方便映射创建 SysplModuleMemu 对象并赋值
	-->
	<select id="get" parameterType="long" resultType="com.mycuckoo.domain.platform.SysplModuleMemu">
		select 
			module_id						as moduleId,
			mod_parent_id				as "sysplModuleMemu.moduleId", 
			mod_name						as modName, 
			mod_en_id						as modEnId, 
			mod_img_cls					as modImgCls, 
			mod_level						as modLevel, 
			mod_order						as modOrder, 
			belong_to_sys				as belongToSys, 
			mod_page_type				as modPageType, 
			memo								as memo, 
			status							as status, 
			creator							as creator, 
			create_date					as createDate
		from 
			<include refid="table.syspl_module_memu"/>
		where 
			module_id = #{id}
	</select>

	<!-- 返回所有模块菜单, 映射到 sysplModuleMemu-->
	<select id="findAll" resultMap="sysplModuleMemu">
		select 
			*
		from 
			<include refid="table.syspl_module_memu"/>
		order by 
			mod_parent_id, module_id, mod_order
	</select>
	
	<!-- 根据父级模块ID统计下级模块数 -->
	<select id="countModulesByUpModId" parameterType="long" resultType="int">
		select 
			count(*)
		from 
			<include refid="table.syspl_module_memu"/>
		where 
			mod_parent_id = #{parentId}
	</select>
	
	<!-- 判断模块名称是否存在 -->
	<select id="countModulesByModuleName" parameterType="string" resultType="int">
		select 
			count(*)
		from 
			<include refid="table.syspl_module_memu"/>
		where 
			mod_name = #{modName}
	</select>
	
	<!-- 根据父模块ID查询下级模块 -->
	<select id="findModulesByUpModId" parameterType="map" resultMap ="sysplModuleMemu">
		select 
			*
		from 
			<include refid="table.syspl_module_memu"/>
		where 
			mod_parent_id = #{moduleId}
		and 
			module_id not in
			<foreach item="id" collection="list" open="(" separator="," close=")">
				#{id}
			</foreach>
	</select>
	
	<!-- 根据条件查询模块 -->
	<select id="findModulesByCon" parameterType="map" resultMap ="sysplModuleMemu">
		select 
			*
		from 
			<include refid="table.syspl_module_memu"/>
		where 
			module_id != 0
		<if test="modName != null">
			and mod_name like #{modName}
		</if>
		<if test="modEnId != null">
			and mod_en_id like #{modEnId}
		</if>
		<if test="array != null">
			and module_id in
			<foreach item="id" collection="array" open="(" separator="," close=")">
				#{id}
			</foreach>
		</if>
		order by 
			module_id desc
		<if test="start > -1 and limit > 0">
			limit #{limit} offset #{start}
		</if>
	</select>
	
	<!-- 根据条件统计模块数 -->
	<select id="countModulesByCon" parameterType="map" resultType ="int">
		select 
			count(*)
		from 
			<include refid="table.syspl_module_memu"/>
		where 
			module_id != 0
		<if test="modName != null">
			and mod_name like #{modName}
		</if>
		<if test="modEnId != null">
			and mod_en_id like #{modEnId}
		</if>
		<if test="array != null">
			and module_id in
			<foreach item="id" collection="array" open="(" separator="," close=")">
				#{id}
			</foreach>
		</if>
	</select>
	
	<!-- 修改模块记录 -->
	<update id="updateModuleRowPrivilege">
		update 
			<include refid="table.syspl_module_memu"/>
		set 
			privilege_level = #{privilegeLevel}
		where 
			module_id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>
	
</mapper> 
