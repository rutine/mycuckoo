<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
	说明: UumGroupMemberMapper映射文件
	
	@author rutine
	@time Sep 23, 2014 10:33:26 AM
	@version 2.0.0
 -->
<mapper namespace="com.mycuckoo.persistence.uum.group.UumGroupMemberMapper">
	<resultMap id="uumGroupMember" type="com.mycuckoo.domain.uum.UumGroupMember">
		<id property="groupMemberId" column="group_member_id" />
		<result property="uumGroup.groupId" column="group_id" />
		<result property="groupMemberType" column="group_member_type" /> <!-- 用户角色 -->
		<result property="memberResourceId" column="member_resource_id" /> <!-- 用户角色ID -->
	</resultMap>
	
	<sql id="colums">
		group_member_id, group_id, group_member_type, member_resource_id
	</sql>

	<!-- 插入组员： 1.由数据库生成id并赋值到UumGroupMember对象 2.输入用对象, 嵌套属性表达式 #{uumGroup.groupId} -->
	<insert id="save" parameterType="com.mycuckoo.domain.uum.UumGroupMember">
		<selectKey keyProperty="groupMemberId" resultType="long" order="BEFORE">
			<include refid="table.UUM_GROUP_MEMBER_SEQ"/>
		</selectKey>
		insert into <include refid="table.uum_group_member"/>
		(
			group_member_id, group_id, group_member_type, member_resource_id
		)
		values (
			#{groupMemberId}, #{uumGroup.groupId}, #{groupMemberType}, #{memberResourceId}
		)
	</insert>
	
	<!-- 更新组员： 1.输入用对象, 嵌套属性表达式 #{uumGroup.groupId} -->
	<update id="update" parameterType="com.mycuckoo.domain.uum.UumGroupMember">
		update 
			<include refid="table.uum_group_member"/>
		set
			group_id								= #{uumGroup.groupId},
			group_member_type				= #{groupMemberType},
			member_resource_id			= #{memberResourceId}
		where 
			group_member_id = #{groupMemberId}
	</update>
	
	<!-- 删除组员 -->
	<delete id="delete" parameterType="long">
		delete from <include refid="table.uum_group_member"/> where group_member_id = #{id}
	</delete>
	
	<!-- 删除一组组员 -->
	<delete id="deleteSome" parameterType="list">
		delete from 
			<include refid="table.uum_group_member"/> 
		where 
			group_member_id in
			<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
				#{item}
			</foreach>
	</delete>
	
	<!-- 删除所有组员 -->
	<delete id="deleteAll">
		delete from <include refid="table.uum_group_member"/>
	</delete>
	
	<!-- 组员是否存在 -->
	<select id="exists" parameterType="long" resultType="boolean">
		select
			count(*) > 0 
		from 
			<include refid="table.uum_group_member"/>
		where 
			group_member_id = #{id}
	</select>
	
	<!-- 组员记录总数 -->
	<select id="count" resultType="long">
		select
			count(*) 
		from 
			<include refid="table.uum_group_member"/>
	</select>
	
	<!--
		获取组员: 输出直接映射到对象, group_member_id 列要 as groupMemberId 以方便映射创建 UumGroupMember 对象并赋值
	-->
	<select id="get" parameterType="long" resultType="com.mycuckoo.domain.uum.UumGroupMember">
		select 
			group_member_id					as groupMemberId,
			group_id								as "uumGroup.groupId", 
			group_member_type				as groupMemberType, 
			member_resource_id			as memberResourceId
		from 
			<include refid="table.uum_group_member"/>
		where 
			group_member_id = #{id}
	</select>

	<!-- 查询所有组员, 映射到 uumGroupMember-->
	<select id="findAll" resultMap="uumGroupMember">
		select 
			*
		from 
			<include refid="table.uum_group_member"/>
	</select>
	
</mapper> 
